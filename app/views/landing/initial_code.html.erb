<%
  @city = Faker::Address.city

  2.times do
    User.create!(name: Faker::Name.first_name, city: @city)
  end
%>
var User = new Databound('/users');

// tabs
// generator :install
User.create({ name: '<%= Faker::Name.first_name %>' }).then(function(new_user) {
  print('I am ' + new_user.name + ' from database');
});

User.find(<%= User.last.id + 1 %>).then(function(user) {
  print('Yo, ' + user.name);
});

User.where({ city: '<%= @city %>' }).then(function(users) {
  print('Users:');
  print(users);
});
