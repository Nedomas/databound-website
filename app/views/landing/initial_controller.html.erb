# You can create your own controller with permissions
class UsersController < ApplicationController
  include Databound

  private

  def model
    User
  end

  def pemitted_columns
    [:name, :email, :client_id]
  end

  dsl(:client_id, :current) do
    current_client_id
  end

  permit_update_destroy? do |record|
    record.client_id == current_client_id
  end
end
