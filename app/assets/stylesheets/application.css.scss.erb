$bg: #e8e8e8;
$dark-bg: #282929;
$main: #e54025;

body {
  font-family: 'Open Sans', sans-serif;
  /* background-color: $bg; */
}

.header {
  .logo {
    background: url("<%= asset_path('logobig.png') %>") center no-repeat;
    background-size: 400px;
    height: 150px;
  }

  .description {
    font-size: 1.3em;
    padding-bottom: 3em;

  }
}

.brand {
  font-weight: 600;
  color: $main;
}

.showoff {
  .editor, #browser {
    height: 450px;
    width: 100%;
  }

  .spacer {
    height: 475px;
    background: url("<%= asset_path('spacer-0.8.png') %>") top center repeat-y;
    background-size: 4px 1px;
    width: 2em;
  }

  #browser {
    font-size: 13px;
  }

  .tab-content {
    padding-top: 1em;
  }

  .run-area {
    width: 100%;
  }
}

.cta {
  a {
    margin: .5em 0 .1em;
    padding: .5em 1.5em;
    font-size: 1.7em;
    white-space:normal !important;
    width: 100%;
  }

  .install {
    font-size: 1.65em;
  }

  .closeheat {
    font-size: 1em;
    margin-top: .76em;
    padding: 1.27em 1.5em;
    background-color: #2C4052;
    border-color: #273C4E;

    &:hover {
      background-color: hsla(208, 30%, 15%, 1);
    }
  }
}

.btn-danger {
  background-color: $main;
}

.used-by {
  padding-top: 3em;

  h2 {
    font-size: 2.5em;
    padding-bottom: 1em;
  }

  a {
    display: inline-block;
  }

  .closeheat {
    background: url("<%= asset_path('closeheat.png') %>") right no-repeat;
    margin-top: -.3em;
  }

  .samesystem {
    background: url("<%= asset_path('samesystem_logo.jpg') %>") right no-repeat;
    margin-top: -.3em;
  }

  .spacepicnic {
    background: url("<%= asset_path('spacepicnic.png') %>") left no-repeat;
  }

  .logo {
    background-size: contain;
    height: 75px;
    width: 250px;
  }
}

.dark {
  background-color: $dark-bg;
  color: #fff;
}

.api {
  border-top: 15px solid $main;
  padding-top: 1em;
  margin-top: 5em;

  h2 {
    font-size: 2.8em;
  }

  h3 {
    font-family: Menlo,Monaco,Consolas,"Courier New",monospace;
  }

  .more-api {
    font-size: 1.5em;
    margin: 1.5em;
    padding: .5em 1em;

    .whats-in-more {
      padding-top: .5em;
    }
  }
}

.features {
  padding-bottom: 4em;

  h3 {
    margin-top: 0;
  }
}

.example {
  margin-top: 1em;
}

.support {
  padding-bottom: 2em;

  h2 {
    padding-top: 1em;
  }
}

.installation {
  padding-bottom: 3.5em;
  padding-top: 2em;

  h2 {
    padding-bottom: .3em;
  }

  .step {
    padding-bottom: .7em;

    h4 {
      padding-bottom: .3em;

      .text {
        padding: .5em 0 0 .4em;
      }
    }
  }

  dd {
    padding: 1em;
  }
}

.security {
  padding-bottom: 2em;
  p {
    font-size: 1.2em;
  }
}

h2 {
  font-size: 2em;
  font-weight: 600;
  padding-bottom: 1em;
}

.fork {
  padding: 1em 1em 0;
}

.no-gutter {
  margin-left: 0;
  margin-right: 0;
  padding-left: 0;
  padding-right: 0;
}

.footer {
  padding: 2em;
  background-color: $dark-bg;
  color: #fff;

  .license {
    a {
      color: #fff;
    }
  }
}
